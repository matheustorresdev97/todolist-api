generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Task {
  id               String   @id @default(uuid())
  task_description String
  created_at       DateTime @default(now())
  updated_at       DateTime @updatedAt
  is_completed     Boolean  @default(false)
}
